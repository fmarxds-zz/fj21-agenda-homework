<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  
  <display-name>agenda</display-name>
  
  <!-- Página padrão caso não seja digitada nenhuma página de acesso ao sistema (fj21-agenda) -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <!-- Página de erro exibida quando ocorrer uma exception qualquer na aplicação -->
  <error-page>
  	<exception-type>java.lang.Exception</exception-type>
  	<location>/erro.html</location>
  </error-page>
  <!-- Página de erro exibida quando é realizada a tentativa de acesso à qualquer página não existente na aplicação -->
  <error-page>
  	<error-code>404</error-code>
  	<location>/404.html</location>
  </error-page>
  
</web-app> 